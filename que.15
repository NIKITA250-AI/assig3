/* Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Navbar container */
.navbar {
  display: flex;
  justify-content: space-around;
  background-color: #f2f2f2;
  padding: 20px;
  flex-wrap: wrap;
}

.nav-section {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

/* Descendant combinators: each section's links get distinct colors */
.section-1 a {
  color: darkblue;
}

.section-2 a {
  color: darkgreen;
}

.section-3 a {
  color: darkred;
}

/* Child combinator: style direct children only */
.nav-section > a {
  font-weight: bold;
  text-decoration: underline;
}

/* Pseudo-classes for interactivity */
a:hover {
  color: orange;
  text-decoration: none;
}

a:active {
  color: crimson;
}

/* Attribute selector with high specificity override */
.navbar a[href^="https"] {
  color: purple !important; /* Overrides any other link color */
  font-style: italic;
}